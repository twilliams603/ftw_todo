<%= form_for(@task) do |t| %>

  <%= t.label      :name %>
  <%= t.text_field :name %>

  <%= t.label      :notes %>
  <%= t.text_field :notes %>

  <%= t.label       :due_date %>
  <%= t.date_select :due_date %>

  <%= t.label     :completed %>
  <%= t.check_box :completed %>

  <%= t.submit :submit %>

<% end %>
